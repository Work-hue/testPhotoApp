function [mat] = create_ht_table(pat, feat_idx)

    pat_mat = pat.mats{1,feat_idx)(:,:);

    num_rows = size(pat.mats(feat_idx),2)
    num_cols = 5;
    mat = zeros(num_rows, num_cols);
    
    pat_mat = pat.mats(1,feat_idx);
    
    % first column
    size(mat(:,1))
    size((pat_mat(1,:))')
    mat(:,1) = (pat_mat(1,:))';
    
    % second column
    mat(:,2) = (pat_mat(2,:))';
    
    % third column
    mat(:,3) = (pat_mat(3,:))';
    
    % fourth column
    pat_ml_vec = pat.ml_vec(1,feat_idx);
    mat(:,4) = pat_ml_vec';
    
    % fifth column
    pat_map_vec = pat.map_vec(1,feat_idx);
    mat(:,5) = pat_map_vec';
    
end